{
  "name": "ts-starter",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Raphael Parree",
  "license": "MIT",
  "private": false,
  "scripts": {
    "watch": "babel --extensions '.ts,.js'  ./src -d dist --watch --source-maps inline",
    "build": "npm-run-all webyarns:build:*",
    "build:babel": "babel  --extensions '.ts,.js' ./src -d dist",
    "build:uglifyjs": "uglifyjs-folder dist  -e -o ./dist/ --pattern \\\"*.js,!*.min.js\\\" --config-file=uglify.json ",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.2",
    "babel-jest": "^27.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.4.3",
    "uglify-js": "^3.14.2",
    "uglifyjs-folder": "^3.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ]
}
